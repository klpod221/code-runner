# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=code_runner

# Authentication (let JWT_EXPIRATION empty for no expiration)
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=24h
ALLOW_REGISTRATION=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Code Execution
MAX_EXECUTION_TIME=10000
MAX_MEMORY=512

# Code Execution Cleanup
ENABLE_AUTO_CLEANUP=true
CODE_EXECUTION_RETENTION_DAYS=7
CLEANUP_CRON_SCHEDULE="0 0 * * *"

# Language Versions
NODEJS_VERSION=20.x
PYTHON_VERSION=3.x
JAVA_VERSION=17
CPP_VERSION=11
C_VERSION=11